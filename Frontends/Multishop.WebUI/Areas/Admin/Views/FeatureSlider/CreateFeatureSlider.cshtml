@model CreateFeatureSliderDto
@{
    ViewData["Title"] = "Yeni Öne Çıkan Alan Oluştur";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="chart-box">

            <form method="post">
                <label>Başlık</label>
                <input type="text" asp-for="Title" class="form-control" />
                <br>
                <label>Görsel Url</label>
                <input type="text" asp-for="ImageUrl" class="form-control" />
                <br>
                <label>Açıklama</label>
                <textarea type="text" asp-for="Description" class="form-control" rows="4" ></textarea>
                <br>
                <button class="btn btn-outline btn-rounded btn-primary"><i class="fa fa-save"></i> Kaydet</button>
            </form>
        </div>
    </div>
</div>

