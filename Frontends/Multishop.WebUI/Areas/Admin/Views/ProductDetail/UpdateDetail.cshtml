@model UpdateProductDetailDto
@{
    ViewData["Title"] = "Ürün Detayı Güncelle";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="chart-box">

            <form method="post">
                <input type="hidden" asp-for="Id" />
                <label>Ürün Adı</label>
                <select asp-items="@ViewBag.products" asp-for="ProductId" class="form-control">
                    <option>Ürünü Seçin</option>
                </select>
                <br />
                <label>Ürün Açıklaması</label>
                <textarea type="text" asp-for="Description" class="form-control" rows="4"></textarea>
                <br>
                <label>Ürün Bilgisi</label>
                <textarea type="text" asp-for="Info" class="form-control" rows="4"></textarea>
                <br>
                <button class="btn btn-outline btn-rounded btn-primary"><i class="fa fa-pencil"></i> Güncelle</button>
            </form>
        </div>
    </div>
</div>

