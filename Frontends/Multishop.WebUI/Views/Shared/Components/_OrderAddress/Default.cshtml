
@model CreateAddressDto

<div class="col-lg-8">
    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Teslimat ve Fatura Adresi</span></h5>
    <form method="post" asp-action="CreateAddress" asp-controller="Order">
    <div class="bg-light p-30 mb-5">
       
        <div class="row">
           
            <div class="col-md-6 form-group">
                <label>Ad</label>
                <input class="form-control" type="text" asp-for="Name" value="@ViewBag.name" placeholder="John">
            </div>
            <div class="col-md-6 form-group">
                <label>Soyad</label>
                    <input class="form-control" type="text" asp-for="Surname" value="@ViewBag.surname" placeholder="Doe">
            </div>
            <div class="col-md-6 form-group">
                <label>E-mail</label>
                <input class="form-control" type="text" value="@ViewBag.email" placeholder="example@email.com">
            </div>
           
            <div class="col-md-6 form-group">
                <label>Adres Satırı</label>
                <input class="form-control" type="text" asp-for="AddressLine" placeholder="123 Mahalle 123 Cadde">
            </div>
           
            <div class="col-md-6 form-group">
                <label>Şehir</label>
                    <input class="form-control" type="text" asp-for="City" value="@ViewBag.city" placeholder="New York">
            </div>
            <div class="col-md-6 form-group">
                <label>İlçe</label>
                    <input class="form-control" type="text" asp-for="District" placeholder="New York">
            </div>
                <button class="btn btn-block btn-primary font-weight-bold py-3">Adresi Kaydet</button>
           
        </div>
        
    </div>
    </form>

</div>