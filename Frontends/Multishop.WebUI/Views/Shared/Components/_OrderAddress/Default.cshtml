
@model CreateAddressDto

<div class="col-lg-8">
    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Teslimat ve Fatura Adresi</span></h5>
    
    <div class="bg-light p-30 mb-5">
       
        <div class="row">
                <input type="hidden" asp-for="UserId" value="@ViewBag.userid" />
            <div class="col-md-6 form-group">
                <label>Ad</label>
                <input class="form-control" type="text" asp-for="Name" value="@ViewBag.name" placeholder="Adınız" required>
            </div>
            <div class="col-md-6 form-group">
                <label>Soyad</label>
                <input class="form-control" type="text" asp-for="Surname" value="@ViewBag.surname" placeholder="Soyadınız" required>
            </div>
            <div class="col-md-6 form-group">
                <label>E-mail</label>
                <input class="form-control" type="email" value="@ViewBag.email" placeholder="ornek@email.com" required>
            </div>
           
            <div class="col-md-6 form-group">
                <label>Adres Satırı</label>
                <input class="form-control" type="text" asp-for="AddressLine" placeholder="123 Mahalle 123 Cadde" required>
            </div>
           
            <div class="col-md-6 form-group">
                <label>Şehir</label>
                <input class="form-control" type="text" asp-for="City" value="@ViewBag.city" placeholder="İstanbul" required>
            </div>
            <div class="col-md-6 form-group">
                <label>İlçe</label>
                <input class="form-control" type="text" asp-for="District" placeholder="Kadıköy" required>
            </div>
              
           
        </div>
        
    </div>
  

</div>


