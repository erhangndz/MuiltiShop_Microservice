
@{
    ViewData["SubTitleHref"] = "/ShoppingCart/Index";
    ViewData["SubTitle"] = "Sepetim";
    ViewData["Title"] = "Sipariş İşlemleri";
    Layout = "~/Views/UILayout/_Layout.cshtml";
}




    <!-- Checkout Start -->
    <div class="container-fluid">
    <form method="post" asp-action="CreateAddress" asp-controller="Order">
        <div class="row px-xl-5">
        
          @await Component.InvokeAsync("_OrderAddress")

         
            <div class="col-lg-4">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Sipariş Toplamı</span></h5>
            @await Component.InvokeAsync("_OrderPrice")
            @await Component.InvokeAsync("_OrderPaymentType")
                
            </div>
           
        </div>
    </form>
    </div>
    <!-- Checkout End -->


  